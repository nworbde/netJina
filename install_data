#!/bin/bash

function check_okay {
    if [ $? -ne 0 ]; then
        echo
        pwd
        echo "FAILED"
        echo
        exit 1
    fi
}

mkdir -p data
check_okay
echo "fetching reaclib datafile from https://dl.dropboxusercontent.com/u/52649885/netJina/reaclib_db.gz
"
cd data
curl -o tmp_reaclib_db.gz https://dl.dropboxusercontent.com/u/52649885/netJina/reaclib_db.gz
check_okay

echo "unpacking data"
gunzip tmp_reaclib_db.gz
check_okay

# now move to final location, prompt if overwrite
mv -i tmp_reaclib_db reaclib_db

echo "fetching nuclib from https://dl.dropboxusercontent.com/u/52649885/netJina/nuclide_db.gz
"
curl -o tmp_nuclide_db.gz     https://dl.dropboxusercontent.com/u/52649885/netJina/nuclide_db.gz
check_okay

echo "unpacking data"
gunzip tmp_nuclide_db.gz
check_okay

# now move to final location, prompt if overwrite
mv -i tmp_nuclide_db nuclide_db
echo "done"
echo

cd ..
